#! /usr/bin/env bash

readonly SSH="-o BatchMode=yes -o ConnectTimeout=10 -o ForwardAgent=yes -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null root@192.168.9.42"

if [[ "$*" == "$SSH mkdir -p /root/mima" ]]; then
    exit 0
elif [[ "$*" == "$SSH chmod +x /root/mima/foo" ]]; then
    exit 0
elif [[ "$*" == "$SSH /root/mima/foo lol wut" ]]; then
    exit 0
else
    exit 1
fi
